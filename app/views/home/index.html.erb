<% if member_signed_in? %>
    <div class="row">
      <div class="span7">
        <h2>Member Functions</h2>
        <ul>
          <li><%= link_to "I'm looking to associate an RFID card with my account.", '/home/enrollcard' %></li>
          <li>I'm looking to change my privacy status.</li>
          	<% if current_member.fsqtoken.blank? %>
              <li><%= link_to "I'm looking to add a foursquare token to my account.", '/auth/foursquare' %></li>
              <% else %>
              <li>Foursquare token added!</li>
          	<% end%>
          <li>I'm looking at add a facebook token to my account.</li>
          <li>I'm looking to add a twitter token to my account.</li>
          <li>I'm looking to donate some money for beer supplies.</li>
          <% if current_member.authy_enabled? %>
              <li> Two Factor Authentication Enabled with Authy!</li>
          <% else %>
              <li><%= link_to "I'm looking to add two-factor authentication to my account", member_enable_authy_path %></li>
          <% end %>
          <% if current_member.is_admin? %>
          <li><%= link_to "Member Admin", members_path %> </li>
          <% end %>
        </ul>
      </div>
      <div class="span5">
      	<h2>At a glance...</h2>
      	<ul class="thumbnails">
  		<li class="span3">
    		<div class="thumbnail">
     	 		<h3><%= current_member.vend_credits %> Soda Credits</h3>
  				<%= link_to "Add 20 ($10.00)", new_charge_path, :class => "btn" %>
  				<a class="coinbase-button" data-code="b4b92e37428027446557c652732c96a8" data-custom="SODA_" href="https://coinbase.com/checkouts/b4b92e37428027446557c652732c96a8">Pay With Bitcoin</a><script src="https://coinbase.com/assets/button.js" type="text/javascript"></script>
	    	</div>
  		</li>
  		</ul>
      </div>	
    </div>


<% else %>
