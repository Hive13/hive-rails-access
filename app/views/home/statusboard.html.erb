<div class="row">
    <div class="span12">
        <h1>Current Members and Guests at the Hive</h1>
    </div>
</div>
<div class="row">
  <div class="span6">
    <h2>Members</h2>
    <table class="table-striped">
      <tr>
        <th>Name</th>
        <th>In/Out</th>
        <th>Time</th>
      </tr>
    <% @members.each do |member| %>
       <tr>
           <% if member.handle %>
               <% if member.handle.empty? %>
                   <td><%= member.fname %> <%=member.lname%></td>
               <% else %>
                   <td><%= member.handle %> </td>
               <% end %>
       <% else %>
         <td><%= member.fname %> <%= member.lname %></td>
       <% end %>
       <% if member.last_access %>
         <% if member.last_access >= 2.hour.ago %>
           <td>In</td>
           <td><%= time_ago_in_words(member.last_access) %></td>
         <% else %>
           <td>Out</td>
           <td><%= time_ago_in_words(member.last_access) %></td>
         <% end %>
       <% else %>
         <td>Out</td>
         <td>Last Check-in Time Unknown</td>
       <% end %>
      </tr>
    <% end %>
    </table>
  </div>
  <div class="span6">
    <h2>Guests</h2>
    <table class="table-striped">
      <tr>
        <th>Name</th>
        <th>In/Out</th>
        <th>Time</th>
      </tr>
    <% @guests.each do |guest| %>
          <tr>
            <td><%= guest.fname %> <%= guest.lname %>
                <% if guest.handle %>
                       (<%= guest.handle %>)
                <% end %>
            </td>
            <% if guest.date_out.nil? %>
              <td>In</td>
              <td><%= time_ago_in_words(guest.date_in) %></td>
            <% else %>
              <td>Out</td>
              <td><%= time_ago_in_words(guest.date_in) %></td>
            <% end %>
         </tr>
       <% end %>
        </table>
      </div>
    </div>
</div>

