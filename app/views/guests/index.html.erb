<h1>Listing guests</h1>

<table>
  <tr>
    <th>Fname</th>
    <th>Lname</th>
    <th>Handle</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Interests</th>
    <th>Date in</th>
    <th>Date out</th>
    <th>Badgeprinted</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @guests.each do |guest| %>
 <% next if cannot? :show, guest %>
  <tr>
    <td><%= guest.fname %></td>
    <td><%= guest.lname %></td>
    <td><%= guest.handle %></td>
    <td><%= guest.email %></td>
    <td><%= guest.phone %></td>
    <td><%= guest.interests %></td>
    <td><%= guest.date_in %></td>
    <td><%= guest.date_out %></td>
    <td><%= guest.badgeprinted %></td>
    <td><%= link_to 'Show', guest %></td>
    <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
    <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

